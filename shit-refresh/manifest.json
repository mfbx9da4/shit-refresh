{
    "name": "Shit refresh",
    "description": "Clears locall storage and refreshes",
    "version": "1.2",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*", "cookies", "webNavigation"
    ],
    "browser_action": {
        "default_title": "Shit refresh",
        "default_icon": "refresh.png"
    },
    "manifest_version": 2,
    "commands": {
        "local-storage": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Remove local storage and refresh"
        },
        "cookies": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Remove cookies"
        },
        "local-storage-and-cookies": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Remove local storage and cookies"
        }
    },
    "icons": {
        "16": "refresh.png",
        "48": "refresh.png",
        "128": "refresh_128.png"
    }
}
